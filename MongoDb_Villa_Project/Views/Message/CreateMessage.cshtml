@model CreateMessageDto
@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="Subject" class="form-control" />
    <br />
    <label>Email</label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />  
    <label>Mesaj İçeriği</label>
    <textarea asp-for="MessageCount" class="form-control rows="10"></textarea>
    <br />
    <button class="btn btn-outline-danger">Kaydet</button>
</form>

