@model List<ResultCounterDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-hover table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Toplam</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Count</td>
            <td>
                <a asp-controller="Counter" asp-action="DeleteCounter" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Counter" asp-action="UpdateCounter" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a asp-controller="Counter" asp-action="CreateCounter" class="btn btn-outline-primary">Yeni Ekle</a>

